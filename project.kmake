#version 1.0

#include
kh: _external_shared/KalaHeaders

#global
compiler: clang-cl
standard: c++20
binarytype: executable
buildname: KalaMake
sources: src
headers: include, kh
customflags: use-ninja
targetprofile: release-windows, debug-windows

#profile release-windows
buildtype: release
buildpath: build/release
defines: WIN32_LEAN_AND_MEAN, NOMINMAX, UNICODE, _UNICODE

#profile debug-windows
buildtype: debug
buildpath: build/debug
defines: WIN32_LEAN_AND_MEAN, NOMINMAX, UNICODE, _UNICODE